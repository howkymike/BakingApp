<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_ingredient_cl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:contentDescription="@string/ingredient_check_image_descryption"
        app:srcCompat="@drawable/icons8_approval_96" />

    <TextView
        android:id="@+id/item_ingredient_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:hint="@string/detail_ingredients_tv"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textStyle="bold" />


</LinearLayout>

